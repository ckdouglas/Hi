<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:id="@+id/chat_item_layout">
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:src="@drawable/ic_default_profile"
                android:layout_height="50dp"
                />
        </RelativeLayout>


        <!---->
        <RelativeLayout
            android:layout_weight="8.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_weight="8.0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/userName"
                            android:layout_centerInParent="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Valerie"/>
                        <TextView
                            android:id="@+id/last_text"
                            android:layout_centerInParent="true"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/userName"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/gray_dark_transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hello I love you so much"
                            />
                    </LinearLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/last_text_time"
                        android:textColor="@color/green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="12:00"
                        android:layout_marginRight="20dp"/>

                    <TextView
                        android:id="@+id/unread_messages_budge"
                        android:textColor="@color/white"
                        android:background="@drawable/messages_budge"
                        android:layout_centerInParent="true"
                        android:layout_width="20dp"
                        android:textSize="9sp"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="0dp"
                        android:text="40"/>

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>